<div class="task">
  <div class="row">
    <div class="col-10">
      <h3><%= task.title %></h3>     
    </div>
    <div class="col-2">
      <%= link_to 'delete task', task_path(task), data: {method: :delete, confirm: 'Are you sure?'}, class: 'btn btn-outline-danger btn-sm' %>
    </div>
  </div>
  <p><%= task.body %></p>
</div>
