<div class="app-container">
  <div class="container app-form-container">
    <div class="app-form">
      <%= form_with model: @task do |f| %>
      <div class="field">
        <%= f.label :title, 'Task title:' %><br />
        <%= f.text_field :title, class: 'form-control mb-3' %>
      </div>

      <div class="field">
        <%= f.label :body, 'Task body:' %><br />
        <%= f.text_area :body, class: 'form-control mb-3' %>
      </div>

      <div class="field mb-3">
        <label for="category-select">Select category:</label>
        <select id="category-select" class="form-select" size="3" name="task[category_id]"
          aria-label="size 3 select example">
          <option selected>without category</option>
          <% @categories.each do |cat| %>
          <option value="<%= cat.id %>"><%= cat.name %></option>
          <% end %>
        </select>
      </div>

      <div class="actions">
        <%= f.submit "Update task", class: 'btn btn-outline-light btn-action mt-2' %>
      </div>
      <% end %>
    </div>
  </div>
</div>
