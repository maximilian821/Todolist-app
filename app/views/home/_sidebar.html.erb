<ul class="sidebar">
  <li class="mb-1 sidebar-link">
    <%= link_to 'All tasks', app_path, class: 'app-link', data: { turbolinks: "false" } %>
  </li>
  <li class="mb-1 sidebar-link">
    <%= link_to 'Tasks to do', tasks_path(uncompleted: :true), class: 'app-link', remote: true %>
  </li>
  <li class="mb-1 sidebar-link">
    <%= link_to 'Completed tasks', tasks_path(completed: :true), class: 'app-link', remote: true %>
  </li>
  <li>
    <div>
      <button class="sidebar-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne"
        aria-expanded="false" aria-controls="collapseOne">
        Categories
      </button>

      <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne">
        <ul class="sidebar sub">
          <li>
            <a class="category-item add-category cat-p open-popup" data-popup="popup1">add category</a>
          </li>
          <li>
            <p><a href="/app" data-params="no_category=true" data-turbolinks="false" class="category-item cat-p cat" data-remote="true"><b>without category</b></a></p>
          </li>
          <%= render partial: "category", collection: @categories %>
        </ul>
      </div>
    </div>
  </li>
  <li class="mb-1 sidebar-link mt-3">
    <%= link_to 'Archive', tasks_path(archived: :true), class: 'app-link', remote: true %>
  </li>
</ul>
